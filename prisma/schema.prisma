// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workflow {
  id String @id @default(cuid())
  userId String
  name String
  description String?
  definition String
  status String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  // User Cannot Have Two Workflows With Same Id!1
  @@unique([name, userId])
}